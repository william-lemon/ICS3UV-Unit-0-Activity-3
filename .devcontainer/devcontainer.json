{
  "build": {
    "dockerfile": "Dockerfile"
  },
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "justjavac.vscode-deno-extensionpack",
        "golang.go",
        "medo64.render-crlf"
      ],
      "settings": {
        "breadcrumbs.enabled": false,
        "breadcrumbs.filePath": "off",
        "breadcrumbs.icons": false,
        "chat.agent.enabled": false,
        "chat.commandCenter.enabled": false,
        "chat.extensionTools.enabled": false,
        "chat.tools.autoApprove": false,
        "code-eol.crlfCharacter": "↵",
        "code-eol.newlineCharacter": "↵",
        "code-eol.returnCharacter": "↵",
        "deno.lint": true,
        "editor.autoClosingQuotes": "always",
        "editor.bracketPairColorization.enabled": true,
        "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
        "editor.folding": false,
        "editor.fontSize": 18,
        "editor.formatOnPaste": true,
        "editor.guides.bracketPairs": true,
        "editor.guides.indentation": true,
        "editor.indentSize": "tabSize",
        "editor.inlineSuggest.enabled": true,
        "editor.insertSpaces": true,
        "editor.lightbulb.enabled": "off",
        "editor.lineNumbers": "on",
        "editor.minimap.enabled": false,
        "editor.mouseWheelZoom": true,
        "editor.renderWhitespace": "all",
        "editor.rulers": [
          80
        ],
        "editor.smoothScrolling": true,
        "editor.stickyScroll.enabled": false,
        "editor.tabSize": 2,
        "explorer.confirmDragAndDrop": false,
        "extensions.ignoreRecommendations": true,
        "files.eol": "\n",
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "github.codespaces.defaultExtensions": [
          "justjavac.vscode-deno-extensionpack",
          "golang.go",
          "medo64.render-crlf"
        ],
        "github.copilot.advanced": {
          "enableChat": false,
          "enableCodeSnippets": false,
          "enableCodeWhisperer": false,
          "enableCopilot": false,
          "enableInlineSuggestions": false,
          "enableQuickSuggestions": false
        },
        "githubPullRequests.defaultMergeMethod": "merge",
        "go.alternateTools": {
          "customFormatter": "golangci-lint-v2"
        },
        "go.formatFlags": [
          "fmt",
          "--stdin"
        ],
        "go.formatTool": "custom",
        "go.lintFlags": [
          "--path-mode=abs",
          "--fast-only"
        ],
        "go.lintTool": "golangci-lint-v2",
        "terminal.integrated.copyOnSelection": true,
        "terminal.integrated.fontSize": 20,
        "terminal.integrated.gpuAcceleration": "off",
        "terminal.integrated.mouseWheelZoom": true,
        "terminal.integrated.rightClickBehavior": "copyPaste",
        "terminal.integrated.suggest.suggestOnTriggerCharacters": false,
        "typescript.format.enable": true,
        "typescript.suggest.enabled": true,
        "window.menuBarVisibility": "classic",
        "workbench.activityBar.visible": true,
        "workbench.colorTheme": "GitHub Dark Default",
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "workbench.welcomePage.walkthroughs.openOnInstall": false
      }
    }
  },
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
  "name": "Mr Coxall - Codespace Image",
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "bash ./.devcontainer/startup.sh"
}
